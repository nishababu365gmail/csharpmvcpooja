@model CsharpMVCPooja.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<select id="selecthello" style="width: 200px">
    <option selected disabled="true"></option>
    
</select>
<h4>Employee</h4>
<hr />

    
<form asp-controller="Employee" asp-action="Create" enctype="multipart/form-data">
    <div class="row" style="border: thick solid blue;">
        <div class="col-md-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control form-control-sm" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>*@
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="firstname" class="control-label"></label>
                <input asp-for="firstname" class="form-control form-control-sm" />
                <span asp-validation-for="firstname" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="IsOutDoor" class="control-label"></label>
                <input asp-for="IsOutDoor" class="form-control form-control-sm"  type="radio" value="I"/>
                <span asp-validation-for="IsOutDoor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsOutDoor" class="control-label">Indoor</label>
                <input asp-for="IsOutDoor" class="form-control form-control-sm"  type="radio" value="O"/>
                <span asp-validation-for="IsOutDoor" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="age" class="control-label"></label>
                <input asp-for="age" class="form-control" />
                <span asp-validation-for="age" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" class="form-control" type="text" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="stateid" class="control-label"></label>
                <select class="form-control select2"  asp-for="@Model.stateid" asp-items="Model.statelist">
                </select>
                <span asp-validation-for="stateid" class="text-danger"></span>
            </div>
        </div>
        @*<p>Date: <input type="text" id="datepicker"></p>*@

        <div class="form-group row">
            <label asp-for="photo" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">

                <input asp-for="photo" class="form-control custom-file-input">
                <label class="custom-file-label">Choose File...</label>

            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input class="form-control" asp-for="@Model.Email" />

                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="AdharNo" class="control-label"></label>
                    <input class="form-control" asp-for="@Model.AdharNo" />

                    <span asp-validation-for="AdharNo" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
        @*<div class="form-group">
            <input id="kk" type="button" value="Test url" class="btn btn-primary" />
        </div>*@
        @*<div class="form-group">
            <input id="kk1" type="button" value="Maani" class="btn btn-primary" />
        </div>*@
    </div>
    <a asp-action="Get" asp-controller="Employee">Download</a>
</form>
    


<div>
    <a asp-action="Create">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
