
@model CsharpMVCPooja.Models.ModelCalender
@{

    var today = Model.DateToStartWith;
    var daystring = today.DayOfWeek;
    if (daystring == DayOfWeek.Sunday)
    {

    }
}
<div class="backdrop"></div>
<center>
    <table width="100%">
        <thead>
            <tr>
                <th>Sun</th>
                <th>Mon</th>
                <th>Tue</th>
                <th>Wed</th>
                <th>Thu</th>
                <th>Fri</th>
                <th>Sat</th>
            </tr>
        </thead>
        <tbody>

            @{
                var counter = 1;
                for (int i = 1; i <= 5; i++)
                {
                    <tr>
                        @{ for (int j = i; j <= 6 + i; j++)
                            {


                                if (i == 1 && Model.StartPoint == j)
                                {
                                    if (Model.ListPartyDetails.FindAll(x => x.PartyDay == counter).Count > 0)
                                    {
                                        var dates = "";
                                        var venues = "";
                                        var times = "";
                                        List<CsharpMVCPooja.Models.ModelCalenderPartyDetails> collection = Model.ListPartyDetails.FindAll(x => x.PartyDay == counter);
                                        foreach (var item in collection)
                                        {
                                            dates = dates + item.PartyDay + ",";
                                            venues = venues + item.PartyVenue + ",";
                                            times = times + item.PartyTime + ",";
                                        }
                                        <td data-toggle="tooltip" data-placement="top" title="there is a party on @dates at @venues and time is @times " class="partytd" data-partydate="@dates" data-partyvenue="@venues" data-partytime="@times">@counter</td>
                                    }
                                    else
                                    {
                                        <td class="calendertd">@counter</td>
                                    }
                                    counter = counter + 1;
                                }
                                else if (counter > 1)
                                {
                                    if (Model.ListPartyDetails.FindAll(x => x.PartyDay == counter).Count > 0)
                                    {
                                        var dates = "";
                                        var venues = "";
                                        var times = "";
                                        List<CsharpMVCPooja.Models.ModelCalenderPartyDetails> collection = Model.ListPartyDetails.FindAll(x => x.PartyDay == counter);
                                        foreach (var item in collection)
                                        {
                                            dates = dates + item.PartyDay + ",";
                                            venues = venues + item.PartyVenue + ",";
                                            times = times + item.PartyTime + ",";
                                        }
                                        <td data-toggle="tooltip" data-placement="top" title="there is a party on @dates at @venues and time is @times " class="partytd" data-partydate="@dates" data-partyvenue="@venues" data-partytime="@times">@counter</td>
                                    }
                                    else
                                    {
                                        <td class="calendertd">@counter</td>
                                    }
                                    counter = counter + 1;
                                }
                                else if (counter == 1)
                                {
                                    <td class="nodatetd"></td>
                                }

                            }
                        }
                    </tr>
                }
            }
        </tbody>
    </table>
</center>

